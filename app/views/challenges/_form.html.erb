<%= simple_form_for(@challenge) do |f| %>
  <%= render "application/forms/errors", errors: @challenge.errors %>

  <%= f.input :number, hint: "The official number of the challenge, as displayed to the teams and scorers" %>
  <%= f.input :description %>
  <%= f.input :points %>

  <%= render 'application/forms/actions', f: f %>
<% end %>
